def solution(n, words):
   
    aleady = [] # ì´ë¯¸ ë§í–ˆë˜ ë‹¨ì–´
    player = 0 # í”Œë ˆì´ì–´ ë²ˆí˜¸
    count = 1 # ê²Œì„ ë¼ìš´ë“œ
    lastword = '' # ê·¸ì „ ë‹¨ì–´
    
    for i in range(len(words)):
        player += 1 # 1ë²ˆë¶€í„° ì‹œì‘
        
        if i == 0: # i=0ì´ë©´ lastwordê°€ ì—†ìœ¼ë¯€ë¡œ ë”í•´ì£¼ê³  continue 
            lastword = words[i]
            aleady.append(words[i])
            continue
        
        if words[i][0] != lastword[-1]: # ì§€ê¸ˆ ì²«ë‹¨ì–´ë‘ ë§ˆì§€ë§‰ë‹¨ì–´ë‘ ë‹¤ë¥´ë©´ 
            return player, count # return 
        elif words[i][0] == lastword[-1]: # ê°™ìœ¼ë©´
            if words[i] in aleady: # ê·¼ë° ì´ë¯¸ ë§í•œ ë‹¨ì–´ë©´
                return player, count # return 
            else: # ì•„ë‹ˆë©´ 
                aleady.append(words[i]) 
                lastword = words[i]
                
		#  í”Œë ˆì´ì–´ ë¦¬ì…‹ ë° ë¼ìš´ë“œ +1 
        if i%n == n-1:
            player = 0 
            count += 1
            continue

    return [0,0] # ì•„ë¬´ ì´ìƒ ì—†ìœ¼ë©´ return 

